{
  "rules": {
    "userProfiles": {
      "$uid": {
        ".read": "auth != null",
        ".write": "$uid === auth.uid",
        "videos": {
          ".indexOn": [
            "addedAt"
          ]
        },
        "favs": {
          ".indexOn": [
            "addedAt"
          ]
        }
      }
    },
    "userStats": {
      "$uid": {
        ".read": "auth != null",
        ".write": "$uid === auth.uid",
        ".indexOn": [
          "pagesInHistory"
        ]
      }
    },
    "videoMetadata": {
      "$uid": {
        ".read": "auth != null",
        ".write": "$uid === auth.uid",
        ".indexOn": [
          "uid",
          "location",
          "timestamp"
        ]
      }
    }
  }
}
