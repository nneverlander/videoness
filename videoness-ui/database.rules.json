{
  "rules": {
    "userProfiles": {
      "$uid": {
        ".read": "auth != null",
        ".write": "$uid === auth.uid"
      }
    },
    "userStats": {
      "$uid": {
        ".read": "auth != null",
        ".write": "$uid === auth.uid",
        ".indexOn": ["pagesInHistory"]
      }
    },
    "videoMetadata": {
      ".read": false,
      ".write": "auth != null",
      ".indexOn": ["uid", "location", "timestamp"]
    }
  }
}
